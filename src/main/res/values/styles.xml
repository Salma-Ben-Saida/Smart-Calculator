<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="layoutStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">9.5dp</item>

    </style>

    <style name="buttonNumber">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/btn_number_shape</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="buttonOperator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">20sp</item>
        <item name="android:onClick">operationAction</item>
    </style>
    <style name="sideTool">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/btn_number_shape</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:onClick">operationAction</item>
    </style>

</resources>